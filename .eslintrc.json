{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": "standard-with-typescript",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "semi": [
      "warn",
      "always"
    ],
    "@typescript-eslint/semi": "off",
    "space-before-function-paren": ["off", {
        "anonymous": "never",
        "named": "never",
        "asyncArrow": "never"
    }],
  }
}
